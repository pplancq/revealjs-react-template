{
  "name": "revealjs-react-template",
  "version": "0.1.0",
  "license": "MIT",
  "description": "revealjs-react-template",
  "scripts": {
    "start": "webpack serve",
    "build": "webpack --mode production",
    "lint": "node scripts/lint.js",
    "lint:eslint": "eslint \"{public,src}/**/*.{js,jsx,mjs,ts,tsx}\"",
    "lint:eslint:fix": "eslint \"{public,src}/**/*.{js,jsx,mjs,ts,tsx}\" --fix",
    "lint:stylelint": "stylelint \"src/**/*.{scss,css}\"",
    "lint:stylelint:fix": "stylelint \"src/**/*.{scss,css}\" --fix",
    "lint:prettier": "prettier \"{public,src}/**/*.!(js|jsx|mjs|ts|tsx|scss|css)\" --check --ignore-unknown",
    "lint:prettier:fix": "prettier \"{public,src}/**/*.!(js|jsx|mjs|ts|tsx|scss|css)\" --write --ignore-unknown",
    "lint:tsc": "tsc --noEmit",
    "package:check": "npm exec --yes package-lock-utd@1.1.3",
    "prepare": "husky"
  },
  "homepage": "https://pplancq.github.io/revealjs-react-template",
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reveal.js": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@pplancq/commitlint-config": "^2.2.0",
    "@pplancq/eslint-config": "^4.0.5",
    "@pplancq/postcss-config": "^2.1.6",
    "@pplancq/prettier-config": "^1.2.1",
    "@pplancq/stylelint-config": "^2.1.1",
    "@pplancq/webpack-config": "^1.8.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/reveal.js": "^5.0.4",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "stylelint": "^16.11.0",
    "stylelint-prettier": "^5.0.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0"
  },
  "overrides": {
    "eslint-plugin-jest-extended": {
      "@typescript-eslint/utils": "8.18.0"
    },
    "eslint-plugin-testing-library": {
      "@typescript-eslint/utils": "8.18.0"
    }
  },
  "volta": {
    "node": "22.12.0",
    "npm": "11.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
